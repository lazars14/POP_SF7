<Window x:Class="POP_SF7.TeacherMenu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:POP_SF7"
        mc:Ignorable="d"
        Title="The Language School" Icon="/POP_SF7;component/Images/logoIcon16.png" Height="674.871" Width="799.725" ResizeMode="NoResize">
    <Grid>
        <TextBlock x:Name="teacherstb" HorizontalAlignment="Left" Height="23" Margin="9,10,0,0" TextAlignment="Center" TextWrapping="Wrap" Text="Nastavnici" VerticalAlignment="Top" Width="770"/>
        <DataGrid x:Name="teachersdg" IsReadOnly="True" AutoGeneratingColumn="teachersdg_AutoGeneratingColumn" HorizontalAlignment="Left" Height="149" Margin="9,38,0,0" VerticalAlignment="Top" Width="697" SelectionChanged="usersdg_SelectionChanged"/>
        <StackPanel HorizontalAlignment="Left" Height="149" Margin="721,46,0,0" VerticalAlignment="Top" Width="58">
            <Button x:Name="addbtn" Content="Dodaj" Height="30" Margin="0,20,0,0" Click="addbtn_Click"/>
            <Button x:Name="editbtn" Content="Izmeni" Height="30" Margin="0,10" Click="editbtn_Click"/>
            <Button x:Name="deletebtn" Content="Obrisi" Height="30" Click="deletebtn_Click"/>
        </StackPanel>

        <GroupBox Header="Pretraga" HorizontalAlignment="Left" Height="132" Margin="9,200,0,0" VerticalAlignment="Top" Width="415">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="40"/>
                    <RowDefinition Height="40"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="65"/>
                    <ColumnDefinition Width="110"/>
                    <ColumnDefinition Width="110"/>
                    <ColumnDefinition Width="110"/>
                </Grid.ColumnDefinitions>
                <Label Content="Kriterijum" Grid.Row="0" Grid.Column="0"/>
                <CheckBox x:Name="firstnamechb" Content="Ime" Grid.Row="0" Grid.Column="1" Margin="10,7,0,0"/>
                <CheckBox x:Name="lastnamechb" Content="Prezime" Grid.Row="0" Grid.Column="2" Margin="10,7,0,0"/>
                <CheckBox x:Name="jmbgchb" Content="JMBG" Grid.Row="0" Grid.Column="3" Margin="10,7,0,0"/>

                <TextBox x:Name="firstnametb" Grid.Row="1" Grid.Column="1" Margin="5"/>
                <TextBox x:Name="lastnametb" Grid.Row="1" Grid.Column="2" Margin="5"/>
                <TextBox x:Name="jmbgtb" Grid.Row="1" Grid.Column="3" Margin="5"/>
                <Button x:Name="searchbtn" Content="Pretrazi" Grid.Row="2" Grid.Column="1" Margin="5" Click="searchbtn_Click"/>
                <Button x:Name="cancelSearchbtn" Content="Ponisti" Grid.Row="2" Grid.Column="2" Margin="5" Click="cancelSearchbtn_Click"/>
            </Grid>
        </GroupBox>

        <GroupBox Header="Sortiranje" HorizontalAlignment="Left" Height="132" Margin="431,200,0,0" VerticalAlignment="Top" Width="348">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="30"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="70"/>
                    <ColumnDefinition Width="80"/>
                    <ColumnDefinition Width="80"/>
                    <ColumnDefinition Width="100"/>
                </Grid.ColumnDefinitions>
                <Label Content="Redosled" Grid.Row="0" Grid.Column="0"/>
                <RadioButton x:Name="sortAscrb" GroupName="sortOrder" Content="Rastuci" Grid.Row="0" Grid.Column="1" Margin="0,5" IsChecked="True"/>
                <RadioButton x:Name="sortDescrb" GroupName="sortOrder" Content="Opadajuci" Grid.Row="0" Grid.Column="2" Margin="0,5"/>

                <Label Content="Kriterijum" Grid.Row="1" Grid.Column="0"/>
                <RadioButton x:Name="idrb" GroupName="sortCriteria" Content="Id" Grid.Row="1" Grid.Column="1" Margin="0,5" IsChecked="True"/>
                <RadioButton x:Name="lastnamerb" GroupName="sortCriteria" Content="Prezime" Grid.Row="1" Grid.Column="2" Margin="0,5"/>
                <RadioButton x:Name="firstnamerb" GroupName="sortCriteria" Content="Ime" Grid.Row="1" Grid.Column="3" Margin="0,5"/>

                <Button x:Name="sortbtn" Content="Sortiraj" Grid.Row="2" Grid.ColumnSpan="4" Margin="100,5,100,0" Click="sortbtn_Click"/>
            </Grid>
        </GroupBox>

        <!-- Teacher and Student -->
        <GroupBox x:Name="coursesgb" Header="Kursevi" HorizontalAlignment="Left" Height="150" Margin="9,337,0,0" VerticalAlignment="Top" Width="414">
            <DataGrid x:Name="coursesdg" IsReadOnly="True" AutoGeneratingColumn="coursesdg_AutoGeneratingColumn" ItemsSource="{Binding ElementName=teachersdg, Path=SelectedItem.ListOfCourses}" Margin="5"/>
        </GroupBox>
        
        <GroupBox x:Name="languagesgb" Header="Jezici" HorizontalAlignment="Left" Height="150" Margin="431,337,0,0" VerticalAlignment="Top" Width="348">
            <DataGrid x:Name="languagesdg" IsReadOnly="True" AutoGeneratingColumn="languagesdg_AutoGeneratingColumn" ItemsSource="{Binding ElementName=teachersdg, Path=SelectedItem.ListOfLanguages}" Margin="5"/>
        </GroupBox>
        <GroupBox x:Name="coursegb_Copy" Header="Selektovani kurs" HorizontalAlignment="Left" Height="144" Margin="10,492,0,0" VerticalAlignment="Top" Width="348">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="40"/>
                    <RowDefinition Height="40"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="150"/>
                </Grid.ColumnDefinitions>
                <Label x:Name="courseLanguagelbl1" Content="Jezik" Grid.Row="0" Grid.Column="0" Margin="10,5,0,10"/>
                <TextBlock x:Name="courseLanguagetb1" Text="{Binding SelectedItem.Course.Language.Name, ElementName=coursesdg}" Grid.Row="0" Grid.Column="1" Margin="0,5,0,5"/>

                <Label x:Name="courseCourseTypelbl1" Content="Tip kursa" Grid.Row="1" Grid.Column="0" Margin="10,5,0,10"/>
                <TextBlock x:Name="courseCourseTypetb1" Text="{Binding SelectedItem.Course.CourseType.Name, ElementName=coursesdg}" Grid.Row="1" Grid.Column="1" Margin="0,5,0,5"/>
            </Grid>
        </GroupBox>

    </Grid>
</Window>
